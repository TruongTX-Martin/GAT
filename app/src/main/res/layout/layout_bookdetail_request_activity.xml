<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        >

        <include layout="@layout/layout_activity_top" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Bạn gửi yêu cầu mượn sách"
                android:textColor="#202020" />

            <ImageView
                android:id="@+id/imgEditionBook"
                android:layout_width="55dp"
                android:layout_height="80dp"
                android:layout_below="@+id/txtRequest"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/twitter_btn" />

            <TextView
                android:id="@+id/txtEditionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRequest"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imgEditionBook"
                android:text="name"
                android:textColor="#202020" />

            <TextView
                android:id="@+id/txtEditionAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEditionName"
                android:layout_toRightOf="@+id/imgEditionBook"
                android:text="author"
                android:textColor="#919191" />

            <LinearLayout
                android:id="@+id/layoutRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEditionAuthor"
                android:layout_toRightOf="@+id/imgEditionBook"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/CustomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtAuthor"
                    android:layout_toRightOf="@+id/imgAvatar"
                    android:numStars="5"
                    android:stepSize="0.01"
                    android:isIndicator="true" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutRating"
                android:layout_toRightOf="@+id/imgEditionBook"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNumberComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutRating"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/imgEditionBook"
                    android:text="20"
                    android:textColor="#202020" />

                <TextView
                    android:id="@+id/txtComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutRating"
                    android:layout_toRightOf="@+id/imgEditionBook"
                    android:text="Lượt nhận xét"
                    android:textColor="#919191" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutSendRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Gửi yêu cầu"
                    android:textColor="#919191" />

                <TextView
                    android:id="@+id/txtDateSendRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#202020" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutStartBorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Bắt đầu mượn"
                    android:textColor="#919191" />

                <TextView
                    android:id="@+id/txtDateStartBorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#202020" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutReturnDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Gửi trả sách"
                    android:textColor="#919191" />

                <TextView
                    android:id="@+id/txtDateReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#202020" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutRejectRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Từ chối yêu cầu"
                    android:textColor="#919191" />

                <TextView
                    android:id="@+id/txtDateRejectRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#202020" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDeletedRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Hủy yêu cầu"
                    android:textColor="#919191" />

                <TextView
                    android:id="@+id/txtDateDeleteRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#202020" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutBorrower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgBorrower"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_profile"
                app:border_color="#8fc4e0"
                app:border_width="1dp" />

            <TextView
                android:id="@+id/txtBorrowerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/imgBorrower"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBorrowerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtBorrowerName"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imgBorrower"
                android:textColor="#000000"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/layoutNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtBorrowerAddress"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imgBorrower"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_circle_loanbook">

                    <TextView
                        android:id="@+id/txtNumberSharing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0"
                        android:textColor="#ffffff" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtBookSharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Sách cho mượn"
                    android:textColor="#000000" />

                <RelativeLayout
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_circle_readingbook">

                    <TextView
                        android:id="@+id/txtNumberReading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0"
                        android:textColor="#ffffff" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtBookReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Sách đang đọc"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutNumber"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/imgBorrower"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgChat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_chat_green" />

                <TextView
                    android:id="@+id/txtChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#5396b9"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layoutBottomLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="#CACACA" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#5396b9" />

                <RelativeLayout
                    android:id="@+id/rltCheckContact"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_filter">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tick_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rltCheckBorrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rltCheckContact"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/bg_filter">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tick_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rltCheckReturn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rltCheckBorrow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/bg_filter">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tick_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rltCheckCancel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rltCheckReturn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/bg_filter">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tick_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rltCheckUnreturn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rltCheckCancel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/ellipse_red"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_cancel_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rltOverLayBorrow"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="60dp"
                    android:background="#C8d7d7d7" />

                <RelativeLayout
                    android:id="@+id/rltOverLayReturnBook"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="125dp"
                    android:background="#C8d7d7d7" />

                <RelativeLayout
                    android:id="@+id/rltOverLayCancelRequest"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="190dp"
                    android:background="#C8d7d7d7" />

                <RelativeLayout
                    android:id="@+id/rltOverLayUnreturn"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="265dp"
                    android:background="#C8d7d7d7"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutBottomRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CACACA" />

                <RelativeLayout
                    android:id="@+id/layoutParrentContacting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent">


                    <RelativeLayout
                        android:id="@+id/layoutContacting"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_layout_filter_book">


                        <TextView
                            android:id="@+id/txtContacting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Liên lạc"
                            android:textColor="@color/colorWhite"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutContactingBorder"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border_layout_filter_book"
                        android:visibility="gone" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutParrentBorrowBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent">


                    <RelativeLayout
                        android:id="@+id/layoutBorrowBook"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_layout_filter_book"
                        >


                        <TextView
                            android:id="@+id/txtBorrowBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Mượn sách"
                            android:textColor="@color/colorWhite"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutBorrowBookBorder"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border_layout_filter_book"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutParrentReturnBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent">


                    <RelativeLayout
                        android:id="@+id/layoutReturnBook"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_layout_filter_book_return">


                        <TextView
                            android:id="@+id/txtReturnBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Trả sách"
                            android:textColor="@color/colorWhite"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layoutReturnBookBorder"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border_layout_filter_book"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutParrentCancleRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent">

                    <RelativeLayout
                        android:id="@+id/rltCancleRequestClose"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ellipse_red"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_cancel_white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutCancleRequest"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/rltCancleRequestClose"
                        android:background="@drawable/bg_layout_filter_book_lost">


                        <TextView
                            android:id="@+id/txtCancleRequest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Hủy yêu cầu"
                            android:textColor="@color/colorWhite"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layoutLostBorder"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border_layout_filter_book"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutParrentUnReturn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:visibility="gone">


                    <RelativeLayout
                        android:id="@+id/layoutUnReturn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_layout_filter_book_lost">


                        <TextView
                            android:id="@+id/txtUnReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Bị thất lạc"
                            android:textColor="@color/colorWhite"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layoutUnReturnBorder"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border_layout_filter_book"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutParrentAgreed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent">


                    <RelativeLayout
                        android:id="@+id/layoutAgreed"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_layout_filter_book">


                        <TextView
                            android:id="@+id/txtAgreed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Đồng ý"
                            android:textColor="@color/colorWhite"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layoutAgreedBorder"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border_layout_filter_book"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutParrentRejected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent">

                    <RelativeLayout
                        android:id="@+id/rltRejectClose"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ellipse_red">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_cancel_white" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layoutRejected"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/rltRejectClose"
                        android:background="@drawable/bg_layout_filter_book_lost">


                        <TextView
                            android:id="@+id/txtRejected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Từ chối yêu cầu"
                            android:textColor="@color/colorWhite"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layoutRejectedBorder"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border_layout_filter_book"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutParrentWaitForTurn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent">


                    <RelativeLayout
                        android:id="@+id/layoutWaitForTurn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_layout_filter_book_wait_forturn">


                        <TextView
                            android:id="@+id/txtWaitForTurn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Đợi đến lượt"
                            android:textColor="@color/colorWhite"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layoutWaitForTurnBorder"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border_layout_filter_book"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtWaitForTurnMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:text="Hiện tại tất cả sách đều đang được mượn. Yêu cầu sẽ tự động
chuyển sang trạng thái “Đợi đồng ý” sau khi sách được trả"
                    android:textColor="#000000" />

                <RelativeLayout
                    android:id="@+id/layoutParrentDeleteRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent">


                    <RelativeLayout
                        android:id="@+id/layoutDeleteRequest"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_layout_filter_book_lost">


                        <TextView
                            android:id="@+id/txtDeleteRequest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Từ chối"
                            android:textColor="@color/colorWhite"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>