<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/paddingLarge">

    <Button
        android:id="@+id/buttonLoadMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sách" />


    <TextView
        android:id="@+id/text_view_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/history"
        android:textColor="@color/colorTextViewDark"
        android:textSize="@dimen/normal_text_view_size" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/text_view_search_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiển thị 0 kết quả tìm kiếm"
        android:textColor="@color/colorTextViewDark"
        android:textSize="@dimen/normal_text_view_size" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>