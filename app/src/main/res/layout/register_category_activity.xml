<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/category_view">

    <include layout="@layout/layout_activity_top" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutMenutop">
        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:columnWidth="@dimen/category_width"
            android:numColumns="auto_fit"
            android:verticalSpacing="15dp"
            android:horizontalSpacing="0dp"
            android:stretchMode="spacingWidthUniform"
            android:layout_marginTop="20dp"
            />
        <Button
            android:text="@string/btn_add_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:id="@+id/btn_add_category"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            android:background="@drawable/bg_rounded_blue"
            android:drawableEnd="@drawable/forma_1"
            android:paddingEnd="@dimen/padding_end"
            android:paddingStart="@dimen/padding_start"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/padding_end"/>
    </FrameLayout>
</RelativeLayout>