<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_layout_dialog"
    android:paddingLeft="@dimen/paddingLarge"
    android:paddingRight="@dimen/paddingLarge"
    android:paddingBottom="@dimen/paddingLarge">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/header_textsize_l"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#4e4e4e"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/error_popup_margin_top"/>

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/error_popup_margin_top"
        android:textAlignment="center"
        android:paddingStart="@dimen/error_popup_padding_lr"
        android:paddingEnd="@dimen/error_popup_padding_lr"
        android:textSize="@dimen/normal_textsize_l"/>

    <Button
        android:id="@+id/buttonAccept"
        android:layout_below="@+id/textViewMessage"
        android:layout_width="@dimen/button_width_normal"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/bg_rounded_blue"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/normal_textsize_l"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/error_popup_margin_top"
        android:text="@string/yes"/>

    <Button
        android:id="@+id/buttonRefuse"
        android:layout_below="@+id/textViewMessage"
        android:layout_width="@dimen/button_width_normal"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/bg_rounded_blue"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/normal_textsize_l"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/error_popup_margin_top"
        android:layout_alignParentRight="true"
        android:text="@string/no"/>

</RelativeLayout>