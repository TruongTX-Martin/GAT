<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <item name="android:windowBackground">@color/backgroundWindow</item>
    </style>

    <style name="DefaultScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabBackground">@drawable/tab_color_selector</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabGravity">fill</item>
    </style>


    <style name="TabLayoutSubViewStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorBlueDark</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/TabTextAppearanceSubViewStyle</item>
    </style>

    <style name="TabTextAppearanceSubViewStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextViewBase">
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextViewHeaderTop" parent="TextViewBase">
        <item name="android:textSize">@dimen/header_textsize</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>

    </style>

    <style name="TextViewHeaderTitle" parent="TextViewBase">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">6sp</item>
        <item name="android:paddingBottom">6sp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_rating_bar_full</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <style name="RadioButtonStyle" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">

        <item name="android:height">40dp</item>
        <item name="android:background">@drawable/bg_radio_selector</item>
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/bg_radio_icon</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">25dp</item>

    </style>


    <style name="ButtonDrawLeftRight" >
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingRight">@dimen/paddingLarge</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextViewDark</item>
    </style>


</resources>
